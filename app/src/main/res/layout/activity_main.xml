<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:textAlignment="center" android:background="#C0DEF3">
    <TextView
            android:text="Nahom Pizza Shop"
            android:layout_width="276dp"
            android:layout_height="47dp"
            android:id="@+id/txt_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintVertical_bias="0.039" android:textSize="30dp" android:textStyle="bold"/>
    <ImageButton
            android:layout_width="160dp"
            android:layout_height="124dp" app:srcCompat="@drawable/Bakers"
            android:id="@+id/imageButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.179"/>
    <TextView
            android:text="Choose Your Pizza Size"
            android:layout_width="272dp"
            android:layout_height="42dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.045" app:layout_constraintVertical_bias="0.407"
            android:textStyle="bold"/>
    <TextView
            android:text="Choose_Your_Topping"
            android:layout_width="205dp"
            android:layout_height="42dp"
            android:id="@+id/textView3" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.591"
            android:textStyle="bold"/>
    <RadioGroup

            android:layout_width="402dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent">
        <RadioButton
                android:text="Small ($-5 )"
                android:layout_width="132dp"
                android:layout_height="46dp"
                android:id="@+id/smallPizza" android:textSize="14sp" android:textStyle="bold"/>
        <RadioButton
                android:text="Medium ($ 7 )"
                android:layout_width="147dp"
                android:layout_height="46dp"
                android:id="@+id/mediumpizza" android:textSize="14sp" android:textStyle="bold"/>
        <RadioButton
                android:text="Large( $ 9 )"
                android:layout_width="126dp"
                android:layout_height="47dp" tools:layout_editor_absoluteY="413dp"
                tools:layout_editor_absoluteX="291dp" android:id="@+id/Largepizza" android:textSize="14sp"
                android:textStyle="bold"/>
    </RadioGroup>
    <CheckBox
            android:text="Oniins($ 1)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OnionsCheckBox" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.068" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.663"/>
    <CheckBox
            android:text="Olive($ 2)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OliverCheckBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.072" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.739"/>
    <CheckBox
            android:text="Tomatoes($ 3)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TomatoesCheckBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.074" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.808"/>
    <Button
            android:text="Place Your Order"
            android:layout_width="196dp"
            android:layout_height="47dp"
            android:id="@+id/orderbutton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.898"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="#75D1B4" android:textSize="18sp"/>
    <TextView
            android:layout_width="199dp"
            android:layout_height="43dp"
            android:id="@+id/TotalPrice" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.987"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>